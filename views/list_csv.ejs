<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Csv Upload!!</title>
    <style>
      ::-webkit-scrollbar {
        display: none;
      }
      .highlight {
        background-color: rgba(7, 2, 247, 0.2);
      }
    </style>
  </head>
  <body class="bg-gray-900">
    <%-include('_navbar') %>
    <section class="mt-[80px]">
      <div>
        <canvas id="myChart" width="400" height="100"></canvas>
      </div>

      <section class="mt-6 flex justify-center">
        <div class="search-bar">
          <form id="searchForm">
            <div class="search-box">
              <input
                type="text"
                class="w-96 h-10 rounded-full pl-4"
                id="search-input"
                placeholder="Search data..."
              />
              <button
                id="go"
                class="search-btn text-white bg-red-400 justify-center hover:bg-red-400 focus:ring-4 focus:outline-none focus:ring-red-400 font-medium rounded-full text-sm px-4 py-2 text-center mr-3 md:mr-0 dark:bg-red-400 dark:hover:bg-red-400 dark:focus:ring-red-400"
                type="button"
              >
                Go
              </button>
            </div>
          </form>
          <div class="justify-center mx-auto px-2">
            <p id="total-rows" class="text-yellow-400">
              Total Rows: <%=length%>
            </p>
          </div>
        </div>
      </section>

      <div>
        <table
          class="w-1/3 w-full max-w-4xl mt-8 mx-auto bg-white shadow-md rounded-lg overflow-hidden"
        >
          <thead class="bg-gray-100">
            <tr>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                DATE
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                OPEN
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                HIGH
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                LOW
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                CLOSE
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% for (let row of data) { %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Date %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Open %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.High %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Low %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Close %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div id="pagination"></div>
    </section>
    <script type="module" src="/js/ajax_data.js"></script>
    <script src="/js/search.js"></script>
    <script src="/js/pagination.js"></script>
  </body>
</html>
