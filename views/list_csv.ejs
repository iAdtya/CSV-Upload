<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Csv Upload!!</title>
    <style>
      ::-webkit-scrollbar {
        display: none;
      }
    </style>
  </head>
  <body class="bg-gray-900">
    <%-include('_navbar') %>
    <section class="mt-[150px]">
      <div>
        <canvas id="myChart" width="400" height="100"></canvas>
      </div>

      <div class="search-bar">
        <form id="searchForm">
          <div class="search-box">
            <input type="text" id="search-input" placeholder="Search data..." />
            <button id="go" class="search-btn" type="button">Go</button>
          </div>
        </form>
        <div>
          <p id="total-rows">Total Rows: <%=length%></p>
        </div>
      </div>

      <div>
        <table
          class="w-1/3 w-full max-w-4xl mt-8 mx-auto bg-white shadow-md rounded-lg overflow-hidden"
        >
          <thead class="bg-gray-100">
            <tr>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                DATE
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                OPEN
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                HIGH
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                LOW
              </th>
              <th
                class="px-6 py-4 text-left text-gray-600 font-bold uppercase tracking-wider"
              >
                CLOSE
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% for (let row of data) { %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Date %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Open %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.High %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Low %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= row.Close %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
    <script type="module" src="/js/ajax_data.js"></script>
    <script src="/js/search.js"></script>
  </body>
</html>
